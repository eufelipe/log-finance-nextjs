generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id         String      @id @default(uuid()) @db.VarChar(36)
  email      String      @unique @db.VarChar(255)
  name       String      @db.VarChar(255)
  image      String?     @db.VarChar(255)
  portfolios Portfolio[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  @@index([email], name: "idx_account_email")
}

model Portfolio {
  id          String  @id @default(uuid()) @db.VarChar(36)
  name        String
  description String? @db.VarChar(255)
  accountId   String  @db.VarChar(36)
  account     Account @relation(fields: [accountId], references: [id])

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  @@index([accountId], name: "idx_portfolio_accountId")
}

model Asset {
  id          String    @id @default(uuid()) @db.VarChar(36)
  name        String?
  assetType   AssetType
  description String?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  stocks                Stock[]
  cryptoCurrencies      CryptoCurrency[]
  etfs                  ETF[]
  realEstateFunds       RealEstateFund[]
  dividends             Dividend[]
  fundamentalIndicators FundamentalIndicator[]
  quotes                Quote[]

  @@index([assetType], name: "idx_asset_type")
}

model Stock {
  id String @id @default(uuid()) @db.VarChar(36)

  assetId String @db.VarChar(36)
  asset   Asset  @relation(fields: [assetId], references: [id])

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  companyInfos CompanyInfo[]

  @@index([assetId], name: "idx_stock_assetId")
}

model CompanyInfo {
  stockId String @id @db.VarChar(36)
  stock   Stock  @relation(fields: [stockId], references: [id])

  marketValue    Float
  firmValue      Float?
  equity         Float?
  totalStocks    Float?
  assets         Float?
  currentAssets  Float?
  availability   Float?
  listingSegment String?
  freeFloat      Float?
  tagAlong       Float?
  dailyLiquidity Float?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  @@index([stockId], name: "idx_companyinfo_stockId")
}

model CryptoCurrency {
  id String @id @default(uuid()) @db.VarChar(36)

  assetId String @db.VarChar(36)
  asset   Asset  @relation(fields: [assetId], references: [id])

  symbol            String?
  marketCap         Float?
  circulatingSupply Float?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  @@index([symbol], name: "idx_crypto_symbol")
  @@index([assetId], name: "idx_crypto_assetId")
}

model ETF {
  id String @id @default(uuid()) @db.VarChar(36)

  assetId String @db.VarChar(36)
  asset   Asset  @relation(fields: [assetId], references: [id])

  symbol String?
  name   String?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  @@index([symbol], name: "idx_etf_symbol")
  @@index([assetId], name: "idx_etf_assetId")
}

model RealEstateFund {
  id String @id @default(uuid()) @db.VarChar(36)

  assetId String @db.VarChar(36)
  asset   Asset  @relation(fields: [assetId], references: [id])

  symbol String?
  name   String?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  @@index([symbol], name: "idx_real_estate_fund_symbol")
  @@index([assetId], name: "idx_real_estate_fund_assetId")
}

model Dividend {
  id String @id @default(uuid()) @db.VarChar(36)

  assetId String @db.VarChar(36)
  asset   Asset  @relation(fields: [assetId], references: [id])

  dividendAmount Float?
  paymentDate    DateTime?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  @@index([assetId], name: "idx_dividend_assetId")
}

model FundamentalIndicator {
  id String @id @default(uuid()) @db.VarChar(36)

  assetId String @db.VarChar(36)
  asset   Asset  @relation(fields: [assetId], references: [id])

  type          String?
  value         Float?
  referenceDate DateTime?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  @@index([assetId], name: "idx_fundamental_assetId")
}

model Quote {
  id String @id @default(uuid()) @db.VarChar(36)

  assetId String @db.VarChar(36)
  asset   Asset  @relation(fields: [assetId], references: [id])

  quoteDate  DateTime?
  openPrice  Float?
  closePrice Float?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  @@index([assetId], name: "idx_quote_assetId")
  @@index([quoteDate], name: "idx_quote_quoteDate")
}

enum AssetType {
  STOCK
  CRYPTOCURRENCY
  ETF
  REAL_ESTATE_FUND
}
